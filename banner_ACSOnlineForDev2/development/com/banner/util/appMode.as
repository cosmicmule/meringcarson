package  com.banner.util{		import flash.utils.Timer;    import flash.events.TimerEvent;			public class appMode {		private var parentClass:Object;		private var bannerTimer:Timer;		public var setAppMode:Boolean;		private var delay:uint = 2000;				public function appMode(refer:Object,delayInt:int = 2000) {			delay = delayInt;			setAppMode = true;			parentClass = refer;			setTimer();		}				public function get AppMode():Boolean {			return setAppMode;        }				public function set AppMode(AppMode:Boolean):void {			setAppMode = AppMode;						if(AppMode == false){				bannerTimer.stop(); 				bannerTimer = null;			}        }				// Private Methods:        private function timerCompleted(e:TimerEvent):void {			bannerTimer.removeEventListener(TimerEvent.TIMER_COMPLETE, timerCompleted);			parentClass.resetbanner();        }				private function setTimer():void {			bannerTimer = new Timer(delay,1);			bannerTimer.addEventListener(TimerEvent.TIMER_COMPLETE, timerCompleted);			bannerTimer.start();         }			}	}